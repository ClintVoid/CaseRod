<input id="2" name="show" type="radio" hidden="hidden">
<div class="slider">
<div class="products">
    @foreach (var reelseat in Model.ReelSeats)
        {
        <button>
            <img src="~/Content/Images/ReelSeats/@reelseat.Image" style="width:120px;height:120px;" /><br />
