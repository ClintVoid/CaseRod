@model CaseRod.ViewModels.BuildViewModel

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string BladeImage = Model.Product.ChosenBlade != null ? Model.Product.ChosenBlade.Image : "default.png";

    string BladeName = Model.Product.ChosenBlade != null ? Model.Product.ChosenBlade.Name : "Blade not chosen.";

    string ReelSeatImage = Model.Product.ChosenReelSeat != null ? Model.Product.ChosenReelSeat.Image : "default.png";

    string ReelSeatName = Model.Product.ChosenReelSeat != null ? Model.Product.ChosenReelSeat.Name : "Reelseat not chosen.";

    string HandleImage = Model.Product.ChosenHandle != null ? Model.Product.ChosenHandle.Image : "default.png";

    string HandleName = Model.Product.ChosenHandle != null ? Model.Product.ChosenHandle.Name : "Handle not chosen.";
}

<div class="panel">
    <div class="panel-body" style="padding: 10px">
        <div>
            <div class="card list-group col-lg-2 col-md-2 col-sm-3" style="margin:10px">
                <img style="width: 100%; height: 183px; display: block;" src="~/Content/Images/Blades/@BladeImage" alt="Card image">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>

            <div class="card list-group col-lg-2 col-md-2 col-sm-3" style="margin:10px">
                <img style="width: 100%; height: 183px; display: block;" src="~/Content/Images/Handles/@HandleImage" alt="Card image">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>

            <div class="card list-group col-lg-2 col-md-2 col-sm-3" style="margin:10px">
                <img style="width: 100%; height: 183px; display: block;" src="~/Content/Images/ReelSeats/@ReelSeatImage" alt="Card image">
                <div class="card-body">
                    <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                </div>
            </div>

            <div class="panel col-lg-1 col-lg-5 col-md-5 col-sm-10" style="margin:10px">
                <table class="table table-responsive" >
                    <thead style="text-align:center">
                        <tr style="text-align:center">
                            <th>Product</th>
                            <th>Weight</th>
                            <th>Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@BladeName</td>
                            <td>@Html.DisplayFor(model => model.Product.ChosenBlade.Weight)</td>
                            <td>@Html.DisplayFor(model => model.Product.ChosenBlade.Price)</td>
                        </tr>
                        <tr>
                            <td>@HandleName</td>
                            <td>@Html.DisplayFor(model => model.Product.ChosenHandle.Weight)</td>
                            <td>@Html.DisplayFor(model => model.Product.ChosenHandle.Price)</td>
                        </tr>
                        <tr>
                            <td>@ReelSeatName</td>
                            <td>@Html.DisplayFor(model => model.Product.ChosenReelSeat.Weight)</td>
                            <td>@Html.DisplayFor(model => model.Product.ChosenReelSeat.Price)</td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><strong>@Model.Product.Weight</strong></td>
                            <td><strong>@Model.Product.Price</strong></td>
                        </tr>
                    </tbody>
                    
                </table>


            </div>
        </div>
    </div>
</div>

<ul class="nav nav-tabs">
    <li class="nav-item navbar-right">
        <a class="nav-link active" data-toggle="tab" href="#Info">
            <span class="glyphicon glyphicon-info-sign"></span> Info
        </a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#Blades">Blades</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#Handles">Handles</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" data-toggle="tab" href="#ReelSeats">Reel Seats</a>
    </li>

</ul>

<div id="myTabContent" class="tab-content panel">
    <div class="tab-pane fade" id="Blades">
        <div>
            <div class="panel-body" style="padding: 10px">
                @foreach (var item in Model.Blades)
                {
                    string ClassHtml = Model.Product.ChosenBlade == null ? "btn btn-danger"
                            : item.ID == Model.Product.ChosenBlade.ID ? "btn btn-default disabled"
                            : "btn btn-danger";
                    
                    <div class="card list-group col-lg-2 col-md-3 col-sm-4 col-xs-6" style="margin:10px">

                        <img src="~/Content/Images/Blades/@item.Image" style="width:100%;height:183px;" alt="Card image">
                        <div class="card-body" style="border-top:2px; border-top-color:black">
                            <p class="card-text" style="text-align:center"><strong>@item.Name</strong></p>
                            <p class="card-text">@item.Weight gram</p>
                            <div class="row" style="padding-left:12.5px;padding-right:12.5px">
                                @item.Price SEK
                                @Html.ActionLink("Choose", "ChooseBlade", "Product", new { id = item.ID }, new { @class = ClassHtml, @style = "float:right" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="Handles">
        <div>
            <div class="panel-body" style="padding: 10px">
                @foreach (var item in Model.Handles)
                {
                    string ClassHtml = Model.Product.ChosenHandle == null ? "btn btn-danger"
                            : item.ID == Model.Product.ChosenHandle.ID ? "btn btn-default disabled"
                            : "btn btn-danger";

                    <div class="card list-group col-lg-2 col-md-3 col-sm-4 col-xs-6" style="margin:10px">

                        <img src="~/Content/Images/Handles/@item.Image" style="width:100%; height:183px" alt="Card image">
                        <div class="card-body" style="border-top:2px; border-top-color:black">
                            <p class="card-text" style="text-align:center"><strong>@item.Name</strong></p>
                            <p class="card-text">@item.Weight gram</p>
                            <div class="row" style="padding-left:12.5px;padding-right:12.5px">
                                @item.Price SEK
                                @Html.ActionLink("Choose", "ChooseHandle", "Product", new { id = item.ID }, new { @class = ClassHtml, @style = "float:right" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="tab-pane fade" id="ReelSeats">
        <div>
            <div class="panel-body" style="padding: 10px">
                @foreach (var item in Model.ReelSeats)
                {
                    string ClassHtml = Model.Product.ChosenReelSeat == null ? "btn btn-danger"
                                : item.ID == Model.Product.ChosenReelSeat.ID ? "btn btn-default disabled"
                                : "btn btn-danger";

                    <div class="card list-group col-lg-2 col-md-3 col-sm-4 col-xs-6" style="margin:10px">

                        <img src="~/Content/Images/ReelSeats/@item.Image" style="width:100%; height:183px" alt="Card image">
                        <div class="card-body" style="border-top:2px; border-top-color:black">
                            <p class="card-text" style="text-align:center"><strong>@item.Name</strong></p>
                            <p class="card-text">@item.Weight gram</p>
                            <div class="row" style="padding-left:12.5px;padding-right:12.5px">
                                @item.Price SEK
                                @Html.ActionLink("Choose", "ChooseReelSeat", "Product", new { id = item.ID }, new { @class = ClassHtml, @style = "float:right" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="tab-pane fade active in" id="Info">
        <div>
            <div class="panel-body" style="padding: 10px">
                @Html.Partial("_DemoView")
                @foreach (var item in Model.ReelSeats)
                {
                    <div class="block list-group-item col-lg-2 col-md-3 col-sm-4" style="min-height: 400px ; min-width: 240px; max-height:;max-width:">
                        <div class="middle">
                            <img src="~/Content/Images/ReelSeats/@item.Image" style="width:100%; height:183px" alt="pic" />
                        </div>

                        <div class="bottom">
                            <div class="heading">@item.Name</div>
                            <div class="info">Classic red converse edition</div>
                            <div class="style">Color: Red / Style: M9621C</div>
                            <button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target=@("#myModal" + item.Name)>Open Modal</button>
                            <div class="price">@item.Price :- <span class="old-price hidden">$75.00</span></div>
                        </div>
                    </div>






                    <!-- Modal -->
                    <div class="modal fade" id=@("myModal" + item.Name) role="dialog">
                        <div class="modal-dialog">

                            <!-- Modal content-->
                            <div class="modal-content">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                                    <h4 class="modal-title">@item.Name</h4>
                                </div>
                                <div class="modal-body">
                                    <div class="container">
                                        <img src="~/Content/Images/ReelSeats/@item.Image" class="col-md-5" />
                                        <p style="color:red" class="col-md-5">@item.Price</p>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    <button type="button" class="btn btn-danger" data-dismiss="modal">Buy ffs</button>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>





