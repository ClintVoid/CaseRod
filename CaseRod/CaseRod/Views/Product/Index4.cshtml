@model CaseRod.ViewModels.BuildViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*Start of collapse*@
    <div class="panel-group" id="accordion">        

        <div class="panel panel-default">
            <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapse1">
                <h4 class="panel-title">
                    Blades
                </h4>
            </div>
            <div id="collapse1" class="panel-collapse collapse">
                <div class="panel-body">
                    @foreach (var item in Model.Blades)
                    {
                        <div class="card list-group col-lg-2 col-md-3 col-sm-4 col-xs-6">




                            <img src="~/Content/Images/Blades/@item.Image" style="width:100%;" alt="Card image">
                            <div class="card-body" style="border-top:2px; border-top-color:black">
                                <p class="card-text" style="text-align:center"><strong>@item.Name</strong></p>
                                <p class="card-text">@item.Weight gram</p>
                                <div class="row" style="padding-left:12.5px;padding-right:12.5px">
                                    @item.Price SEK
                                    @Html.ActionLink("Choose", "ChooseBlade", "Product", new { id = item.BladeID }, new { @class = "btn btn-danger", @style = "float:right" })
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>   







<div class="panel-group" id="accordion">

    <div class="panel panel-default">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapse2">
            <h4 class="panel-title">
                Handles
            </h4>
        </div>
        <div id="collapse2" class="panel-collapse collapse">
            <div class="panel-body">
                @foreach (var item in Model.Handles)
                {
                    <div class="card list-group col-lg-2 col-md-3 col-sm-4 col-xs-6">

                        <img src="~/Content/Images/Handles/@item.Image" style="width:100%;" alt="Card image">
                        <div class="card-body" style="border-top:2px; border-top-color:black">
                            <p class="card-text" style="text-align:center"><strong>@item.Name</strong></p>
                            <p class="card-text">@item.Weight gram</p>
                            <div class="row" style="padding-left:12.5px;padding-right:12.5px">
                                @item.Price SEK
                                @Html.ActionLink("Choose", "ChooseHandle", "Product", new { id = item.HandleID }, new { @class = "btn btn-danger", @style = "float:right" })
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div> 







<div class="panel-group" id="accordion">

    <div class="panel panel-default">
        <div class="panel-heading" data-toggle="collapse" data-parent="#accordion" href="#collapse3">
            <h4 class="panel-title">

                Reel Seats

            </h4>
        </div>
        <div id="collapse3" class="panel-collapse collapse">
            <div class="panel-body">
                @foreach (var item in Model.ReelSeats)
                {
                    <div class="card list-group col-lg-2 col-md-3 col-sm-4 col-xs-6">
                        
                        <img src="~/Content/Images/ReelSeats/@item.Image" style="width:100%;" alt="Card image">
                            <div class="card-body" style="border-top:2px; border-top-color:black">
                                <p class="card-text" style="text-align:center"><strong>@item.Name</strong></p>
                                <p class="card-text">@item.Weight gram</p>
