                                    @item.Price SEK
                                    @Html.ActionLink("Choose", "ChooseReelSeat", "Product", new { id = item.ReelSeatID }, new { @class = "btn btn-danger", @style="float:right" })
                                </div>
                            </div>
                    </div>
                }
            </div>
        </div>
    </div>

</div>              
@*End of collapse*@

